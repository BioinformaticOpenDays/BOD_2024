---
import { Icon } from 'astro-icon';
---

<section class="relative bg-primary-100 dark:bg-slate-800">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="bg-white dark:bg-slate-900 max-w-3xl mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none">
				<h2 class="text-4xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-white">
					<span>Don't miss our updates</span>
				</h2>
				<p class="text-xl text-gray-600 dark:text-slate-400">
					Follow us on social and subscribe to our newsletter for the latest news!
				</p>

				<div class="mt-6">
					<a
						class="btn text-white bg-primary-600 hover:bg-primary-800 mb-4 sm:mb-0"
						href="http://eepurl.com/idPje1"
						target="_blank"
						rel="noopener"
					>
						<Icon name="tabler:checkbox" class="w-5 h-5 mr-1 -ml-1.5" /> Subscribe
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

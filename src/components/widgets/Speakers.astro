---
import { Icon } from 'astro-icon';
import Sectionhead from '~/components/widgets/sectionhead.astro';
import { Picture } from '@astrojs/image/components';

const TeamImg1 = 'public/speakers/Loic-Lannelongue.png';
const TeamImg2 = 'https://images.unsplash.com/photo-1633332755192-727a05c4013d?&fit=crop&w=280';
const TeamImg3 = 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?&fit=crop&w=280';

const team = [
	{
		name: 'Lo√Øc Lannelongue',
		title: 'Research Associate in Biomedical Data Science',
		place: 'University of Cambridge',
		link: '/speakers#loiclannelongue',
		avatar: {
			src: TeamImg1,
			width: 500,
			height: 500,
		},
	},
];
---

<section id="speakers" class="dark:bg-neutral-900">
	<div class="mx-auto px-4 sm:px-6 overflow-hidden pb-20">
		<div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
			<h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">Speakers</h2>
			<p class="mt-1 text-neutral-600 dark:text-neutral-400">Here you can see the first speakers confirmed</p>
		</div>
		<div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
			{
				team.map((item) => (
					<div class="col-start-2 group rounded shadow-xl hover:shadow-lg transition dark:bg-neutral-800 px-2">
						<div class="px-3 pt-5 aspect-square transition">
							<a href={item.link}>
								<Picture
									{...item.avatar}
									format="avif"
									alt="Team"
									animation="scale"
									widths={[200, 400]}
									aspectRatio="1:1"
									sizes="(max-width: 800px) 100vw, 400px"
									class="w-full h-full object-cover rounded transition group-hover:-translate-y-1 group-hover:shadow-xl"
									format="avif"
								/>
								<div class="my-3 text-center">
									<h2 class="text-lg font-bold text-gray-800 dark:text-neutral-200 pb-2"> {item.name}</h2>
									<h3 class="text-sm text-slate-500 dark:text-neutral-400"> {item.title}</h3>
									<h4 class="text-sm text-slate-500 dark:text-neutral-400"> {item.place}</h4>
								</div>
							</a>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
